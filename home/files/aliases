# easier navigation
alias ..="cd .."
alias ...="cd ../.."

# shortcuts
alias p="cd ~/Projects"
alias t="cd ~/Tutorials"
alias poc="cd ~/POCs"
alias v="vim"
alias e="exit"

# list all files colorized in long format
alias ll="ls -lh"

# list all files colorized, including dot files
alias la="ls -a"

# list all files colorized in long format, including dot files
alias lla="ls -lah"

# list only directories
alias lsd='ls -lh | grep "^d"'

# recursively delete '.DS_Store' files
alias cleanup="find . -type f -name '*DS_Store' -ls -delete"

# stop apache tomcat
alias tomcat_stop="/Library/Tomcat/bin/shutdown.sh"

# start apache tomcat
alias tomcat_start="/Library/Tomcat/bin/startup.sh"

# start postgresql (installed with homebrew)
alias pgsql_start='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'

# stop postgresql (installed with homebrew)
alias pgsql_stop='pg_ctl -D /usr/local/var/postgres stop'

# status postgresql (installed with homebrew)
alias pgsql_status='pg_ctl -D /usr/local/var/postgres status'

# start jenkins (installed with homebrew)
alias jenkins_start='launchctl load /usr/local/opt/jenkins/homebrew.mxcl.jenkins.plist'

# stop jenkins (installed with homebrew)
alias jenkins_stop='launchctl unload /usr/local/opt/jenkins/homebrew.mxcl.jenkins.plist'

