git-cleanup-branches() {
    git fetch --prune
    git branch -vv | grep -E '(: gone]|merged)' | grep -vE '(^\*|master|main)' | awk '{print $1}' | xargs -r git branch -D
    git branch -vv | awk '/^[^*]/ && !/\[origin\// {print $1}' | grep -vE '(master|main)' | xargs -r git branch -D
}

