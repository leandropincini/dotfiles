[apply]
    whitespace = fix
[user]
    email = leandropincini@gmail.com
    name = Leandro Pincini
[alias]
    a = add
    pl = pull -p
    ci = commit
    ps = push -u
    st = status
    br = branch
    co = checkout
    cl = clone
    clnd = clone --depth 1
    df = diff
    r = rebase
    ri = rebase --interactive
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
    lo = log --oneline
[core]
    excludesfile= ~/.gitignore
    attributesfile= ~/.gitattributes
    editor = /usr/bin/vim
    whitespace = space-before-tab,ident-with-non-tab,trailing-space
[merge]
    log = true
[branch "master"]
    remote = origin
    merge = refs/heads/master
    mergeoptions = log
[branch "main"]
    remote = origin
    merge = refs/heads/main
    mergeoptions = log
[remote "origin"]
    push = HEAD
    fetch = +refs/heads/*:refs/remotes/origin/*
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    whitespace = red reverse
    plain = black bold
    meta = white
    frag = magenta bold
    old = red bold
    new = green bold
    commit = yellow
[color "status"]
    added = green bold
    changed = red bold
    untracked = blue bold
